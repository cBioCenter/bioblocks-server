{
  "$id": "bioblocks-server-json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["visualizations", "vignettes"],
  "properties": {
    "vignettes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "icon",
          "link",
          "name",
          "summary",
          "uuid",
          "visualizations"
        ],
        "properties": {
          "icon": { "type": "string" },
          "link": { "type": "string" },
          "name": { "type": "string" },
          "summary": { "type": "string" },
          "uuid": { "type": "string" },
          "visualizations": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "visualizations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "authors",
          "citations",
          "compatibleData",
          "isOriginal",
          "labels",
          "name",
          "repo",
          "summary",
          "uuid",
          "version"
        ],
        "properties": {
          "authors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "citations": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/citation"
            }
          },
          "compatibleData": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "isOriginal": { "type": "boolean" },
          "labels": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "name": { "type": "string" },
          "repo": { "$ref": "#/definitions/repo" },
          "summary": { "type": "string" },
          "uuid": { "type": "string" },
          "version": { "type": "string" }
        }
      }
    }
  },
  "definitions": {
    "citation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["fullCitation", "link"],
      "properties": {
        "fullCitation": { "type": "string" },
        "link": { "type": "string" }
      }
    },
    "repo": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lastUpdate": { "type": "string" },
        "link": { "type": "string" },
        "version": { "type": "string" }
      }
    }
  }
}
